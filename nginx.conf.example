# Aurora Website - Nginx Configuration Example
# Copy this to your nginx site configuration

server {
    listen 80;
    listen [::]:80;
    server_name myaurora.ch www.myaurora.ch;
    
    root /path/to/landing-page-v2;
    index index.html;

    # Remove .html extension from URLs - serve .html files when URL doesn't have extension
    location / {
        try_files $uri $uri.html $uri/ =404;
    }

    # Handle root domain - serve index.html
    location = / {
        try_files /index.html =404;
    }

    # Redirect .html URLs to clean URLs (external redirect for SEO)
    # This matches any URL ending in .html and redirects to the clean version
    location ~ ^(.+)\.html$ {
        return 301 $scheme://$host$1;
    }

    # Security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;

    # Browser caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Don't cache HTML files
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
    }
}
